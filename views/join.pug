extends layouts/main.pug

block content
    .join
        .form-container
            form(action=routes.join, method="post")
                input(type="text", name="name", placeholder="이름", required=true)
                input(type="email", name="email", placeholder="people@vloger.com", required=true)
                input(type="password", name="password", placeholder="비밀번호", required=true)
                input(type="password", name="repassword", placeholder="비밀번호 확인", required=true)
                input(type="submit", value="가입하기")
            include partials/socialLogin